{
	"compilerOptions": {
		"module": "commonjs",
		"declaration": true,
		"removeComments": false,
		"allowSyntheticDefaultImports": true,
		"target": "ES2016",
		"outDir": "./dist",
		"baseUrl": "./",
		"incremental": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true
	},
	"exclude": ["node_modules", "dist", "tests"]
}
